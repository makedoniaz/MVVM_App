<Application x:Class="Project.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project"
             xmlns:vm="clr-namespace:Project.ViewModels"
             xmlns:v="clr-namespace:Project.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:StudentsViewModel}">
            <v:StudentsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TeachersViewModel}">
            <v:TeachersView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GroupsViewModel}">
            <v:GroupsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:InfoViewModel}">
            <v:InfoView/>
        </DataTemplate>
    </Application.Resources>
</Application>
