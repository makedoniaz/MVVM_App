<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <DockPanel>
            <UniformGrid DockPanel.Dock="Left" Rows="4" Width="70" Margin="10">
                <Button Margin="6px">Info</Button>
                <Button Margin="6px">Groups</Button>
                <Button Margin="6px">Students</Button>
                <Button Margin="6px">Teachers</Button>
            </UniformGrid>
            
            <ContentControl DockPanel.Dock="Top" Content="{Binding ActiveViewModel}" Margin="16px">

            </ContentControl>
        </DockPanel>
    </Grid>
</Window>
